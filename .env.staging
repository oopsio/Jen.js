# ========================================
# STAGING ENVIRONMENT VARIABLES
# ========================================

NODE_ENV=staging
DEBUG=false

# ========================================
# SERVER CONFIG
# ========================================
PORT=3000
HOST=0.0.0.0
HMR_ENABLED=false

# ========================================
# DATABASE (Staging)
# ========================================
DATABASE_URL=postgresql://staging_user:${STAGING_DB_PASSWORD}@staging-db.example.com:5432/jen_staging
MONGODB_URI=mongodb+srv://staging_user:${STAGING_MONGO_PASSWORD}@staging-cluster.mongodb.net/jen_staging
SQLITE_PATH=/var/data/jen-staging.db

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=/var/log/jen/staging.log
SENTRY_DSN=https://staging-key@sentry.io/staging-project

# ========================================
# CORS
# ========================================
CORS_ORIGINS=https://staging.example.com,https://staging-api.example.com
CORS_CREDENTIALS=false

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=900000

# ========================================
# CACHE
# ========================================
CACHE_ENABLED=true
CACHE_TTL=1800
REDIS_URL=redis://:${STAGING_REDIS_PASSWORD}@staging-redis.example.com:6379/0

# ========================================
# SESSION
# ========================================
SESSION_SECRET=${STAGING_SESSION_SECRET}
SESSION_TIMEOUT=7200000
SECURE_COOKIES=true
SESSION_STORE=redis

# ========================================
# AUTH
# ========================================
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRY=12h
ENABLE_OAUTH=true
OAUTH_PROVIDERS=google,github

# ========================================
# BUILD
# ========================================
MINIFY=true
SOURCEMAP=true
CSS_EXTRACT=true
BUNDLE_ANALYSIS=false

# ========================================
# CDN & ASSETS
# ========================================
CDN_URL=https://staging-cdn.example.com
ASSET_PREFIX=/static/
ASSET_CACHE_VERSION=staging-v1

# ========================================
# SECURITY
# ========================================
HELMET_ENABLED=true
CSP_HEADER=default-src 'self'; script-src 'self'
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff

# ========================================
# FEATURES
# ========================================
FEATURE_ANALYTICS=true
FEATURE_AI=true
FEATURE_EXPERIMENTAL=true

# ========================================
# TURBO
# ========================================
TURBO_CACHE_DIR=/var/cache/turbo
TURBO_CACHE_VALIDATION_ENABLED=true

# ========================================
# MONITORING & APM
# ========================================
APM_ENABLED=true
APM_SERVER_URL=https://staging-apm.example.com:8200
APM_SERVICE_NAME=jen.js-staging
DATADOG_ENABLED=true
DATADOG_API_KEY=${STAGING_DATADOG_API_KEY}

# ========================================
# API
# ========================================
API_URL=https://staging-api.example.com
API_TIMEOUT=15000
ALLOW_INVALID_CERTS=false
