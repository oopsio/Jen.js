{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "server.ts", "build.ts", "jen.config.ts", "site/**/*.ts", "site/**/*.tsx"]
}
