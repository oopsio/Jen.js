# ========================================
# TEST ENVIRONMENT VARIABLES
# ========================================

NODE_ENV=test
DEBUG=false

# ========================================
# SERVER CONFIG (Test)
# ========================================
PORT=3001
HOST=localhost
HMR_ENABLED=false

# ========================================
# DATABASE (Test - In-Memory)
# ========================================
DATABASE_URL=postgresql://test:test@localhost:5433/jen_test
MONGODB_URI=mongodb://localhost:27018/jen_test
SQLITE_PATH=:memory:

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=error
LOG_FORMAT=json
LOG_FILE=./logs/test.log

# ========================================
# CORS
# ========================================
CORS_ORIGINS=http://localhost:3001
CORS_CREDENTIALS=false

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=10000
RATE_LIMIT_WINDOW=900000

# ========================================
# CACHE
# ========================================
CACHE_ENABLED=true
CACHE_TTL=60
REDIS_URL=redis://localhost:6380

# ========================================
# SESSION
# ========================================
SESSION_SECRET=test-session-secret
SESSION_TIMEOUT=3600000
SECURE_COOKIES=false

# ========================================
# AUTH
# ========================================
JWT_SECRET=test-jwt-secret
JWT_EXPIRY=1h
ENABLE_OAUTH=false

# ========================================
# BUILD
# ========================================
MINIFY=false
SOURCEMAP=true
CSS_EXTRACT=false
BUNDLE_ANALYSIS=false

# ========================================
# TESTING
# ========================================
TEST_ENV=test
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=70
PARALLEL_TESTS=4
BAIL_ON_FIRST_FAILURE=false

# ========================================
# FEATURES
# ========================================
FEATURE_ANALYTICS=false
FEATURE_AI=false
FEATURE_EXPERIMENTAL=true

# ========================================
# TURBO
# ========================================
TURBO_CACHE_DIR=.turbo
TURBO_CACHE_VALIDATION_ENABLED=true

# ========================================
# API
# ========================================
API_URL=http://localhost:3001/api
API_TIMEOUT=30000
ALLOW_INVALID_CERTS=true

# ========================================
# MOCK SERVERS
# ========================================
MOCK_DATABASE=true
MOCK_REDIS=true
MOCK_S3=true
MOCK_STRIPE=true
