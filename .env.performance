# ========================================
# PERFORMANCE TESTING VARIABLES
# ========================================

NODE_ENV=production
DEBUG=false

# ========================================
# BENCHMARK SETTINGS
# ========================================
BENCH_ITERATIONS=1000
BENCH_WARMUP_ITERATIONS=100
BENCH_TIMEOUT=300000
BENCH_PARALLEL=1

# ========================================
# PROFILING
# ========================================
PROFILE=false
PROFILE_OUTPUT=./profiles
ENABLE_CPU_PROFILER=true
ENABLE_MEMORY_PROFILER=true
ENABLE_GC_PROFILER=true
SAMPLE_INTERVAL=1000

# ========================================
# MEMORY
# ========================================
MAX_HEAP_SIZE=4096
MAX_OLD_SPACE_SIZE=3840
ENABLE_HEAP_SNAPSHOT=true
ENABLE_MEMORY_LEAK_DETECTION=true

# ========================================
# NETWORK
# ========================================
NETWORK_THROTTLE=false
NETWORK_LATENCY_MS=0
NETWORK_BANDWIDTH_KBPS=1000000

# ========================================
# LIGHTHOUSE
# ========================================
LIGHTHOUSE_ENABLED=true
LIGHTHOUSE_BUDGET=true
LIGHTHOUSE_OUTPUT_PATH=./reports/lighthouse
LIGHTHOUSE_METRICS=performance,accessibility,best-practices,seo
LIGHTHOUSE_THROTTLING=throttle4g
LIGHTHOUSE_SCREENSHOTS=true

# ========================================
# METRICS
# ========================================
COLLECT_CORE_WEB_VITALS=true
COLLECT_CUSTOM_METRICS=true
METRICS_EXPORT_FORMAT=json,csv
METRICS_OUTPUT_PATH=./reports/metrics

# ========================================
# LOAD TESTING
# ========================================
LOAD_TEST_ENABLED=false
LOAD_TEST_CONCURRENT_USERS=100
LOAD_TEST_DURATION=300
LOAD_TEST_RAMP_UP=60

# ========================================
# REGRESSION TESTING
# ========================================
REGRESSION_TEST_ENABLED=true
REGRESSION_BASELINE_PATH=./benchmarks/baseline
REGRESSION_THRESHOLD=5

# ========================================
# OUTPUT
# ========================================
PERF_REPORT_FORMAT=json,html,csv
PERF_REPORT_PATH=./reports/performance
PERF_SLACK_WEBHOOK=${PERF_SLACK_WEBHOOK}
PERF_GITHUB_COMMENTS=true
