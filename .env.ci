# ========================================
# CI/CD ENVIRONMENT VARIABLES
# ========================================

NODE_ENV=test
DEBUG=true
CI=true

# ========================================
# SERVER CONFIG
# ========================================
PORT=3000
HOST=localhost
HMR_ENABLED=false

# ========================================
# DATABASE (CI - In-Memory/Test)
# ========================================
DATABASE_URL=postgresql://ci_user:ci_pass@localhost:5432/jen_ci
MONGODB_URI=mongodb://localhost:27017/jen_ci
SQLITE_PATH=:memory:

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/ci.log

# ========================================
# CACHE
# ========================================
CACHE_ENABLED=false

# ========================================
# SESSION
# ========================================
SESSION_SECRET=ci-test-secret
SECURE_COOKIES=false

# ========================================
# AUTH
# ========================================
JWT_SECRET=ci-test-secret
ENABLE_OAUTH=false

# ========================================
# BUILD
# ========================================
MINIFY=true
SOURCEMAP=true
CSS_EXTRACT=true
BUNDLE_ANALYSIS=false

# ========================================
# TESTING
# ========================================
TEST_ENV=ci
TEST_TIMEOUT=60000
COVERAGE_THRESHOLD=80
PARALLEL_TESTS=2
BAIL_ON_FIRST_FAILURE=true

# ========================================
# CI-SPECIFIC
# ========================================
GITHUB_ACTIONS=${GITHUB_ACTIONS}
GITHUB_TOKEN=${GITHUB_TOKEN}
GITHUB_SHA=${GITHUB_SHA}
GITHUB_REF=${GITHUB_REF}
GITHUB_REPOSITORY=${GITHUB_REPOSITORY}

# ========================================
# ARTIFACT UPLOAD
# ========================================
ARTIFACT_PATH=./dist
ARTIFACT_RETENTION=5
ARTIFACT_COMPRESSION=true

# ========================================
# SLACK NOTIFICATIONS
# ========================================
SLACK_WEBHOOK=${SLACK_WEBHOOK_CI}
SLACK_CHANNEL=#ci-notifications
