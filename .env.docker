# ========================================
# DOCKER ENVIRONMENT VARIABLES
# ========================================

NODE_ENV=production
DEBUG=false

# ========================================
# SERVER CONFIG
# ========================================
PORT=3000
HOST=0.0.0.0
HMR_ENABLED=false

# ========================================
# DATABASE (Docker)
# ========================================
DATABASE_URL=postgresql://docker_user:${POSTGRES_PASSWORD}@postgres:5432/jen_docker
MONGODB_URI=mongodb://mongo:27017/jen_docker
REDIS_URL=redis://redis:6379/0

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/docker.log

# ========================================
# CORS
# ========================================
CORS_ORIGINS=*
CORS_CREDENTIALS=false

# ========================================
# SESSION
# ========================================
SESSION_SECRET=${SESSION_SECRET}
SESSION_STORE=redis

# ========================================
# AUTH
# ========================================
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h

# ========================================
# BUILD
# ========================================
MINIFY=true
SOURCEMAP=false
CSS_EXTRACT=true

# ========================================
# DOCKER-SPECIFIC
# ========================================
DOCKER_IMAGE=jen.js:latest
DOCKER_REGISTRY=registry.example.com
DOCKER_COMPOSE_FILE=docker-compose.yml
