# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================

NODE_ENV=production
DEBUG=false

# ========================================
# SERVER CONFIG
# ========================================
PORT=3000
HOST=0.0.0.0
HMR_ENABLED=false

# ========================================
# DATABASE (Production)
# ========================================
DATABASE_URL=postgresql://prod_user:${DB_PASSWORD}@prod-db.example.com:5432/jen_prod
MONGODB_URI=mongodb+srv://prod_user:${MONGO_PASSWORD}@prod-cluster.mongodb.net/jen_prod
SQLITE_PATH=/var/data/jen-prod.db

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/jen/production.log
SENTRY_DSN=https://key@sentry.io/project

# ========================================
# CORS
# ========================================
CORS_ORIGINS=https://example.com,https://www.example.com
CORS_CREDENTIALS=false
CORS_MAX_AGE=86400

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# ========================================
# CACHE
# ========================================
CACHE_ENABLED=true
CACHE_TTL=3600
REDIS_URL=redis://:${REDIS_PASSWORD}@prod-redis.example.com:6379/0
REDIS_CLUSTER=false

# ========================================
# SESSION
# ========================================
SESSION_SECRET=${SESSION_SECRET_PROD}
SESSION_TIMEOUT=3600000
SECURE_COOKIES=true
SESSION_STORE=redis

# ========================================
# AUTH
# ========================================
JWT_SECRET=${JWT_SECRET_PROD}
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
ENABLE_OAUTH=true
OAUTH_PROVIDERS=google,github

# ========================================
# BUILD
# ========================================
MINIFY=true
SOURCEMAP=false
CSS_EXTRACT=true
BUNDLE_ANALYSIS=false
COMPRESSION=gzip,brotli

# ========================================
# CDN & ASSETS
# ========================================
CDN_URL=https://cdn.example.com
ASSET_PREFIX=/static/
ASSET_CACHE_VERSION=v1

# ========================================
# SECURITY
# ========================================
HELMET_ENABLED=true
CSP_HEADER=default-src 'self'; script-src 'self' trusted.cdn.com
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1;mode=block

# ========================================
# FEATURES
# ========================================
FEATURE_ANALYTICS=true
FEATURE_AI=true
FEATURE_EXPERIMENTAL=false

# ========================================
# TURBO
# ========================================
TURBO_CACHE_DIR=/var/cache/turbo
TURBO_CACHE_VALIDATION_ENABLED=true

# ========================================
# MONITORING & APM
# ========================================
APM_ENABLED=true
APM_SERVER_URL=https://apm.example.com:8200
APM_SERVICE_NAME=jen.js-prod
DATADOG_ENABLED=true
DATADOG_API_KEY=${DATADOG_API_KEY}

# ========================================
# HEALTH CHECK
# ========================================
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# ========================================
# API
# ========================================
API_URL=https://api.example.com
API_TIMEOUT=10000
ALLOW_INVALID_CERTS=false
