# ========================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ========================================

NODE_ENV=development
DEBUG=true

# ========================================
# SERVER CONFIG
# ========================================
PORT=3000
HOST=localhost
HMR_ENABLED=true
HMR_HOST=localhost
HMR_PORT=3001

# ========================================
# DATABASE (Development)
# ========================================
DATABASE_URL=postgresql://dev:devpass@localhost:5432/jen_dev
MONGODB_URI=mongodb://localhost:27017/jen_dev
SQLITE_PATH=./data/dev.db

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/dev.log

# ========================================
# CORS
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
CORS_CREDENTIALS=true

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# ========================================
# CACHE
# ========================================
CACHE_ENABLED=false
REDIS_URL=redis://localhost:6379

# ========================================
# SESSION
# ========================================
SESSION_SECRET=dev-session-secret-change-in-prod
SESSION_TIMEOUT=86400000
SECURE_COOKIES=false

# ========================================
# AUTH
# ========================================
JWT_SECRET=dev-jwt-secret-change-in-prod
JWT_EXPIRY=7d
ENABLE_OAUTH=false

# ========================================
# BUILD
# ========================================
MINIFY=false
SOURCEMAP=true
CSS_EXTRACT=false
BUNDLE_ANALYSIS=false

# ========================================
# TESTING
# ========================================
TEST_ENV=development
TEST_TIMEOUT=10000
COVERAGE_THRESHOLD=50

# ========================================
# FEATURES (Dev flags)
# ========================================
FEATURE_ANALYTICS=false
FEATURE_AI=false
FEATURE_EXPERIMENTAL=true

# ========================================
# TURBO
# ========================================
TURBO_CACHE_DIR=.turbo
TURBO_CACHE_VALIDATION_ENABLED=false

# ========================================
# API
# ========================================
API_URL=http://localhost:3000/api
API_TIMEOUT=30000
ALLOW_INVALID_CERTS=true
