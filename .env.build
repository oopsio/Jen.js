# ========================================
# BUILD ENVIRONMENT VARIABLES
# ========================================

NODE_ENV=production
DEBUG=false

# ========================================
# BUILD CONFIGURATION
# ========================================
BUILD_TARGET=esm
BUILD_FORMAT=esm,cjs
BUILD_OUTDIR=dist
BUILD_ENTRY_POINTS=src/index.ts

# ========================================
# OPTIMIZATION
# ========================================
MINIFY=true
MINIFY_IDENTIFIERS=true
MINIFY_WHITESPACE=true
MINIFY_SYNTAX=true
SOURCEMAP=false
TREE_SHAKE=true

# ========================================
# CSS PIPELINE
# ========================================
EXTRACT_CSS=true
MINIFY_CSS=true
POSTCSS_ENABLED=true
SCSS_ENABLED=true
AUTOPREFIXER_ENABLED=true

# ========================================
# ASSET HANDLING
# ========================================
ASSET_INLINE_LIMIT=8192
IMAGE_OPTIMIZATION=true
OPTIMIZE_IMAGES=true
IMAGE_FORMATS=webp,avif,jpg,png
HASH_ASSETS=true
ASSET_MANIFEST=true

# ========================================
# BUNDLE ANALYSIS
# ========================================
ANALYZE=false
ANALYZE_BUNDLE_SIZE=true
ANALYZE_DUPLICATES=true
BUNDLE_REPORT_FORMAT=json,html
BUNDLE_REPORT_PATH=./dist/bundle-report

# ========================================
# COMPRESSION
# ========================================
COMPRESSION_ENABLED=true
COMPRESSION_ALGORITHM=gzip
BROTLI_ENABLED=true

# ========================================
# PERFORMANCE
# ========================================
PARALLEL_WORKERS=4
CACHE_ENABLED=true
CACHE_DIR=.esbuild
INCREMENTAL_BUILD=true

# ========================================
# VERSION & METADATA
# ========================================
BUILD_VERSION=${VERSION}
BUILD_TIMESTAMP=${BUILD_TIMESTAMP}
BUILD_REVISION=${BUILD_REVISION}
BUILD_AUTHOR=${BUILD_AUTHOR}

# ========================================
# OUTPUT
# ========================================
VERBOSE_OUTPUT=false
SHOW_BUILD_TIME=true
SHOW_FILE_SIZES=true
