# ========================================
# JEN.JS FRAMEWORK - ENVIRONMENT TEMPLATE
# ========================================
# Copy this file to .env and customize for your environment
# For development: cp .env.example .env.development
# For production: use .env.production
# See individual .env.* files for environment-specific defaults

# ========================================
# CORE ENVIRONMENT
# ========================================
NODE_ENV=development
DEBUG=true

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
HOST=localhost
HMR_ENABLED=true
HMR_HOST=localhost
HMR_PORT=3001

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/jen_dev
DATABASE_POOL_SIZE=10
DATABASE_POOL_MIN=2

# MongoDB
MONGODB_URI=mongodb://localhost:27017/jen_dev
MONGODB_OPTIONS_RETRYWRITE=true

# SQLite
SQLITE_PATH=./data/dev.db

# Redis (Cache & Session Store)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# SECURITY & AUTHENTICATION
# ========================================

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d
JWT_ALGORITHM=HS256

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_TIMEOUT=86400000
SECURE_COOKIES=false
SAME_SITE_COOKIES=Lax

# OAuth Configuration
ENABLE_OAUTH=false
OAUTH_PROVIDERS=google,github,microsoft

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_SKIP_ADMIN=true

# ========================================
# CACHING
# ========================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_STRATEGY=lru
CACHE_MAX_SIZE=1000

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# ========================================
# API CONFIGURATION
# ========================================
API_URL=http://localhost:3000/api
API_TIMEOUT=30000
API_RETRIES=3
API_RETRY_DELAY=1000
ALLOW_INVALID_CERTS=false

# ========================================
# BUILD CONFIGURATION
# ========================================
MINIFY=false
SOURCEMAP=true
CSS_EXTRACT=false
BUNDLE_ANALYSIS=false
COMPRESSION=gzip
HASH_ASSETS=false

# ========================================
# TESTING
# ========================================
TEST_ENV=development
TEST_TIMEOUT=10000
COVERAGE_THRESHOLD=50
PARALLEL_TESTS=4

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_ANALYTICS=false
FEATURE_AI=false
FEATURE_EXPERIMENTAL=true
FEATURE_DEBUG_PANEL=true

# ========================================
# EXTERNAL SERVICES
# ========================================

# Sentry Error Tracking
SENTRY_DSN=

# Datadog APM
DATADOG_ENABLED=false
DATADOG_API_KEY=
DATADOG_SITE=datadoghq.com

# Slack Notifications
SLACK_WEBHOOK=
SLACK_CHANNEL=#notifications

# SendGrid Email
SENDGRID_API_KEY=

# Stripe Payment
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ========================================
# TURBO BUILD SYSTEM
# ========================================
TURBO_CACHE_DIR=.turbo
TURBO_CACHE_VALIDATION_ENABLED=false
TURBO_TOKEN=${TURBO_TOKEN}
TURBO_TEAM=${TURBO_TEAM}

# ========================================
# CI/CD (GitHub Actions, etc.)
# ========================================
CI=false
GITHUB_ACTIONS=false
GITHUB_TOKEN=
GITHUB_REPOSITORY=
GITHUB_SHA=

# ========================================
# DOCKER
# ========================================
DOCKER_IMAGE=jen.js:latest
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=
DOCKER_PASSWORD=

# ========================================
# PERFORMANCE MONITORING
# ========================================
APM_ENABLED=false
APM_SERVER_URL=
APM_SERVICE_NAME=jen.js
ENABLE_PROFILING=false
ENABLE_MEMORY_MONITORING=false

# ========================================
# DEVELOPMENT TOOLS
# ========================================
OPEN_DEVTOOLS=false
ENABLE_HMRT=true
ENABLE_BUNDLE_ANALYZER=false
ENABLE_VISUALIZER=false

# ========================================
# ADVANCED OPTIONS
# ========================================
NODE_ARGS=--max-old-space-size=4096
WORKER_THREADS=4
COMPRESSION_LEVEL=6
